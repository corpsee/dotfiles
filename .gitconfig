[user]
name  = corpsee
email = poisoncorpsee@gmail.com

[credential]
helper = cache --timeout=3600

[color]
diff   = true
grep   = true
status = true
ui     = true

[log]
decorate = full

[alias]
ch = checkout
mg = merge --no-ff
lg = log --graph --decorate --pretty=oneline --abbrev-commit --all
ll = log ORIG_HEAD.. --stat --no-merges

[core]
autocrlf   = false
safecrlf   = true
eof        = lf
whitespace = trailing-space,space-before-tab
editor     = mcedit

[push]
default = current
